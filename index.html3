      step1: {
        clv: "Medel",
        churn: "Låg",
        nba: "Komplettera profil",
        subject: "Ämne: Välkommen till Join the Movement",
        headline: "Välkommen, Stadium Member",
        body: "Kära medlem,\nTack för att du väljer Stadium som din partner i din löparresa.\n\nBörja med att svara på några snabba frågor så anpassar vi din upplevelse efter din nivå.",
        cta: "Starta din check-in",
        link: "Koppla Strava för mer personliga tips",
      },
      step1b: {
        clv: "Medel",
        churn: "Medel",
        nba: "Sätt mål",
        subject: "Ämne: Sätt ditt mål på 20 sek",
        headline: "Komplettera din löparprofil",
        body: "Vi gör det enkelt.\nVälj ditt mål på 20 sekunder så får du tips och rekommendationer som matchar din resa.",
        cta: "Sätt mål",
        link: "Kanske senare",
      },
      step2: {
        clv: "Hög",
        churn: "Låg",
        nba: "Sätt mål",
        subject: "Ämne: Vilket lopp tränar du mot?",
        headline: "Sätt ditt mål",
        body: "Vi vill guida dig hela vägen.\nVälj vilket mål du tränar mot så får du rätt stöd, rätt timing och relevanta rekommendationer.",
        cta: "Välj mål",
        link: "Koppla Strava",
      },
      step3: {
        clv: "Hög",
        churn: "Låg",
        nba: "Momentum",
        subject: "Ämne: Din löparprofil är klar",
        headline: "Din plan är igång",
        body: "Din profil är uppdaterad.\nNu kan vi anpassa tips, pepp och rekommendationer efter din nivå och dina behov över tid.",
        cta: "Se din status",
        link: "Uppdatera mål",
      },
      step4: {
        clv: "Hög",
        churn: "Låg",
        nba: "Recovery",
        subject: "Ämne: Du bygger momentum",
        headline: "Veckans nästa steg",
        body: "Du är igång.\nHär är 3 enkla steg som gör det lättare att fortsätta — plus smart recovery för att minska skaderisk.",
        cta: "Se veckans tips",
        link: "Koppla Strava",
      },
      step4sms: {
        clv: "Hög",
        churn: "Låg",
        nba: "Recovery",
        subject: "Ämne: Du ökar snabbt nu",
        headline: "Kom ihåg återhämtning",
        body: "Vi ser att belastningen ökar.\nGlöm inte återhämtningen för att fortsätta stabilt.\n\nRek: recovery, energi, skadeprevention.",
        cta: "Se recovery-tips",
        link: "Spara i Wallet",
      },
      step5: {
        clv: "Hög",
        churn: "Låg",
        nba: "Race prep",
        subject: "Ämne: 4 veckor kvar till loppet",
        headline: "Race-serie: din checklista",
        body: "Nu är det nära.\nHär är din checklista, energi & tävlingskläder — plus inbjudan till run club och shake-out run.",
        cta: "Öppna checklistan",
        link: "Se lokala event",
      },
      step6: {
        clv: "Hög",
        churn: "Låg",
        nba: "Moment",
        subject: "Ämne: Lycka till idag",
        headline: "Det här fixar du",
        body: "Vi hejar på dig.\nEfter målgång: hämta gratis sportdryck i din Stadium-butik.",
        cta: "Visa wallet-kort",
        link: "Hitta butik",
      },
      step7: {
        clv: "Hög",
        churn: "Låg",
        nba: "Next goal",
        subject: "Ämne: Grattis – vad är nästa mål?",
        headline: "Nästa steg",
        body: "Starkt jobbat.\nVälj nästa mål så anpassar vi din plan och ser till att du får rätt stöd i rätt tid.\n\nVi påminner också när det är dags att se över skorna baserat på faktisk användning.",
        cta: "Sätt nästa mål",
        link: "Gå med i en ny challenge",
      }
    };

    function setChips(clv, churn, nba){
      document.getElementById("chipClv").textContent = "CLV: " + clv;
      document.getElementById("chipChurn").textContent = "Churn-risk: " + churn;
      document.getElementById("chipNba").textContent = "Next Best Action: " + nba;
    }

    function setPreview(key){
      const e = emails[key];
      if(!e) return;
      document.getElementById("pSubject").textContent = e.subject;
      document.getElementById("pHeadline").textContent = e.headline;
      document.getElementById("pBody").textContent = e.body;
      document.getElementById("pCTA").textContent = e.cta;
      const link = document.getElementById("pLink");
      link.textContent = e.link;
      setChips(e.clv, e.churn, e.nba);
    }

    document.getElementById("flow").addEventListener("click", (ev) => {
      const btn = ev.target.closest("[data-email]");
      if(!btn) return;
      setPreview(btn.getAttribute("data-email"));
    });
  </script>
</body>
